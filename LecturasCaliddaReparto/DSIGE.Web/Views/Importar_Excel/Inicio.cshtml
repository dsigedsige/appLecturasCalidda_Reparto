                                    $scope.Lista_Lecturas_Temporal = data.data;
                                    var flag_error = false;
                                    for (obj of $scope.Lista_Lecturas_Temporal) {
                                        if (obj.id_operario == 0 || obj.id_operario == '0') {
                                            flag_error = true;
                                            break;
                                        }
                                    }

                                    if (flag_error == true) {
                                        btn_Guardar.disabled = true;
                                    }
                                    else {
                                        btn_Guardar.disabled = false;
                                    }

                                } else {
                                    btn_Guardar.disabled = true;
                                    alert(res.data);
                                }

                            } else {

                                if (idServicio == 6 || idServicio == '6' || idServicio == 9 || idServicio == '9') {

                                    if (data.ok == true) {
                                        btn_ver.disabled = true;
                                        btn_Guardar.disabled = false;
                                        $scope.Lista_Lecturas_Temporal = data.data;
                                    } else {
                                        btn_Guardar.disabled = true;
                                        alert('ERROR:' + JSON.stringify(data.data));
                                        console.log(data.data)
                                    }

                                } else {

