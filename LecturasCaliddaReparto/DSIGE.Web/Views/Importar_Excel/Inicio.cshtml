            $scope.GuardarTablaTempLecturas = function () {

                var cancel = document.getElementById('btn_cancel');
                var btn_Guardar = document.getElementById('btn_guardar');
                var Fecha_asignacion = document.getElementById('_fecha').value;
                var idServicio = document.getElementById('id_servicio').value;
                var cbo_opcion = document.getElementById('cbo_opcion').value;
                let cbo_opcionReparto = document.getElementById('cbo_opcionReparto').value;

                var FechaAsigna = document.getElementById('id_fecha_asignacion').value;
                var fechaMovil = document.getElementById('_fecha').value;

                if (idServicio == '0') {
                    new PNotify({
                        title: ' ',
                        text: 'Por favor seleccione un Servicio. Muchas gracias.',
                        type: 'error'
                    });
                    return;
                }
                if (Fecha_asignacion == '') {
                    new PNotify({
                        title: 'Sistemas',
                        text: 'Por favor seleccione o ingrese la Fecha.',
                        type: 'error'
                    });
                    return;
                }


                var params = {};
                var ruta = '';

                console.log(idServicio)

                if (idServicio == 1 || idServicio == '1') {
                    params = {
                        fechaAsignacion: FechaAsigna,
                        fechaMovil: fechaMovil,
                        id_servicio: idServicio,
                        nombre_archivo: $scope.myFile.name
                    }
                    ruta = 'set_enviarMovil_lecturas';
                }
                else if (idServicio == 6 || idServicio == '6') {  ///reparto Actualizar

                    if (cbo_opcionReparto == 2) { ///--- opcion actualizar
                        params = {
                            fechaAsignacion: FechaAsigna,
                            fechaMovil: fechaMovil,
                            id_servicio: idServicio,
                        }
                        ruta = 'set_enviarMovil_repartoActualizar';
                    } else {
                        params = {
                            fechaAsignacion: fechaMovil,
                            id_servicio: idServicio,
                            nombre_archivo: $scope.myFile.name
                        }
                        ruta = 'JsonRegistrarTemp_LecturasExcel';
                    }
                }

                else if (idServicio == 7 || idServicio == '7') { /// guardar grnades clientes
                    params = {
                        fechaAsignacion: FechaAsigna,
                        fechaMovil: fechaMovil,
                        id_servicio: idServicio,
                        nombre_archivo: $scope.myFile.name
                    }
                    ruta = 'set_enviarMovil_grandesClientes';
                }
                else if (idServicio == 8 || idServicio == '8') { /// guardar reclamos

                    params = {
                        fechaAsignacion: FechaAsigna,
                        fechaMovil: fechaMovil,
                        id_servicio: idServicio,
                        nombre_archivo: $scope.myFile.name,
                        opcion: cbo_opcion
                    }
                    ruta = 'set_enviarMovil_reclamos';

                }
                else {// los demas servicios
