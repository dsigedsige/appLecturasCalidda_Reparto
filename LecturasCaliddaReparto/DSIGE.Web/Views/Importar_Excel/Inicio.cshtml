                                    $scope.Cant_Null_Operador = Cant;
                                    $scope.Cant_Reg_Lecturas = Flag_Cant;

                                    if (Flag_Cant == 0) {
                                        btn_Guardar.disabled = false;
                                    }
                                    else {
                                        btn_Guardar.disabled = true;
                                    }

                                }

                            }


                            $('.sige-load').hide();
                        })
                        .error(function () {
                            alert('Ocurrio un problema con la conexion, vuelva a intentar.')
                            $('.sige-load').hide();
